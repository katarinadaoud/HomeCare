@model Medication

<h2>Delete Medication</h2>

<h3>Are you sure you want to delete this medication?</h3>
<div>
    <h4>Medication</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Medication Id</dt>
        <dd class="col-sm-10">@Model.MedicationId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Purpose</dt>
        <dd class="col-sm-10">@Model.Purpose</dd>

        <dt class="col-sm-2">Dosage</dt>
        <dd class="col-sm-10">@Model.Dosage</dd>

        <dt class="col-sm-2">Frequency</dt>
        <dd class="col-sm-10">@Model.Frequency</dd>

        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Instructions</dd>

    </dl>

    <form asp-action="DeleteMed" asp-route-id="@Model.MedicationId" method="post"> 
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Medication" asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>