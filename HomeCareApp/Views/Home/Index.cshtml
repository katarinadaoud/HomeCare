@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/05-home.css" asp-append-version="true" />
}

<div class="text-center mt-5 role-chooser">
    <h1 class="display-4 title">
        Welcome to
        <span class="brand-inline" aria-label="LifeLink">
            <svg class="brand-icon" width="44" height="44" viewBox="0 0 24 24" role="img" aria-hidden="true">
                <path d="M12 4c2-2.5 6-2.7 8.2-.6 2.9 2.5 3.2 7 .6 9.6-2.3 2.5-6.9 6-8.5 7.1-.2.1-.5.1-.7 0-1.6-1.1-6.2-4.6-8.5-7.1-2.6-2.6-2.3-7.1.6-9.6C6 1.3 10 1.5 12 4Z"
                      fill="none" stroke="var(--brand-accent)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"
                      transform="translate(12 12) scale(1.12) translate(-12 -12)" />
                <path d="M5.2 11.2 12 5.8l6.8 5.4v5.9c0 .5-.4.9-.9.9h-4.2a.6.6 0 0 1-.6-.6v-2.6a2 2 0 0 0-2-2h-1.2a2 2 0 0 0-2 2v2.6a.6.6 0 0 1-.6.6H6.1a.9.9 0 0 1-.9-.9z"
                      fill="currentColor" opacity="0.96"/>
            </svg>
            <span class="brand-text"><span class="brand-L">L</span>ife<span class="brand-L">L</span>ink</span>
        </span>!
    </h1>

    <h2 class="mb-4 subtitle">Choose your role</h2>

    <div class="d-grid gap-3 col-12 col-md-8 col-lg-6 mx-auto" role="group" aria-label="Choose role">
        <a asp-controller="Patient"
           asp-action="Index"
           class="btn btn-lg btn-role btn-patient"
           aria-label="I am a patient">
            I am a patient
        </a>

        <a asp-controller="Employee"
           asp-action="Schedule"
           class="btn btn-lg btn-role btn-staff"
           aria-label="I am health personnel">
            I am health personnel
        </a>
        @* ↑ viktig: Schedule, ikke Index *@
    </div>
</div>
