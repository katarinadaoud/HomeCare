
@* Views/Shared/_NotificationBell.cshtml *@
<button id="notifBtn" type="button" class="btn position-relative icon-btn" aria-label="Notifications" title="Notifications">
    <i class="bi bi-bell"></i>
    <span id="notifBadge" class="badge" style="display:none;">0</span>
</button>

<div class="toast-container position-fixed top-0 end-0 p-3">
  <div id="notifToast" class="toast" role="status" aria-live="polite" aria-atomic="true">
    <div class="toast-header">
      <i class="bi bi-bell me-2"></i>
      <strong class="me-auto">Varsler</strong>
      <small class="text-muted">nå</small>
      <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      <ul id="notifList" class="list-unstyled mb-0 small">
        <li class="text-muted">Ingen varsler…</li>
      </ul>
    </div>
  </div>
</div>
