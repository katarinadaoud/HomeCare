@model Patient

<h2>Create New Patient</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Address"></label><span class="text-danger">*</span>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HealthRelated_info"></label>
        <input asp-for="HealthRelated_info" class="form-control" />
        <span asp-validation-for="HealthRelated_info" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Table View</a>
</form>