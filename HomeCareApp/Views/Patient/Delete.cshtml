@model Patient

<h2>Delete Patient</h2>

<h3>Are you sure you want to delete this patient?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Health Related info</dt>
        <dd class="col-sm-10">@Model.HealthRelated_info</dd>

        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Emergency Contact Id</dt>
        <dd class="col-sm-10">@Model.EmergencyContactId</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PatientId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>