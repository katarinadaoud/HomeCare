@model Patient

<h2>Delete Patient</h2>

<h3>Are you sure you want to delete this patient?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient Id</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.phonenumber</dd>

        <dt class="col-sm-2">Health Related Info</dt>
        <dd class="col-sm-10">@Model.HealthRelated_info</dd>

        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>

    <form asp-action="DeletePatient" asp-route-id="@Model.PatientId" method="post"> 
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Employee" asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>