@model Employee

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee Id</dt>
        <dd class="col-sm-10">@Model.EmployeeId</dd>

        <dt class="col-sm-2">Specialty</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">Availability</dt>
        <dd class="col-sm-10">@Model.Availability</dd>

        <dt class="col-sm-2">Work Area</dt>
        <dd class="col-sm-10">@Model.Work_area</dd>

        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.EmployeeId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>