@model Employee

<h2>Create New Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="EmployeeId"></label><span class="text-danger">*</span>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialty"></label><span class="text-danger">*</span>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" class="form-control" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Work_area"></label>
        <input asp-for="Work_area" class="form-control" />
        <span asp-validation-for="Work_area" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Employee" class="btn btn-secondary">Back to Table View</a>
</form>