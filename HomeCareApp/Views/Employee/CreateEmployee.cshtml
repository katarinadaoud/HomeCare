@model HomeCareApp.Models.Employee
@{
    ViewData["Title"] = "Register new employee";
    ViewBag.Role = "employee";
    ViewBag.ActiveTab = "patients";   // evt. endre til den fanen du vil markere
    Layout = "_Layout";
}

<h2 class="mb-3">Register new employee</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    @* Hvis du setter UserId manuelt (ellers kan denne skjules eller fjernes) *@
    @*
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    *@

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Employees" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
