@model HomeCareApp.ViewModels.AppointmentBookViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Book appointment</h2>

<form asp-action="Book" asp-controller="Appointment" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Appointment.Subject" class="form-label"></label>
        <input asp-for="Appointment.Subject" class="form-control" />
        <span asp-validation-for="Appointment.Subject" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Appointment.Description" class="form-label"></label>
        <textarea asp-for="Appointment.Description" class="form-control"></textarea>
        <span asp-validation-for="Appointment.Description" class="text-danger"></span>
    </div>

    <!-- Velg pasient (setter FK: Appointment.PatientId) 
    <div class="form-group mb-3">
        <label asp-for="Appointment.PatientId" class="form-label">Patient</label>
        <select asp-for="Appointment.PatientId"
                asp-items="Model.PatientOptions"
                class="form-select">
        </select>
        <span asp-validation-for="Appointment.PatientId" class="text-danger"></span>
    </div>-->

    <!-- Dato settes av kalenderen; bind til Appointment.Date -->
    <input type="hidden" asp-for="Appointment.Date" id="SelectedDate" />
    <span asp-validation-for="Appointment.Date" class="text-danger"></span>

    <!-- Kalender-partial (skal sette #SelectedDate til yyyy-MM-dd) -->
    <partial name="_Calendar" model="Model" />

    <button type="submit" class="btn btn-primary mt-3">Confirm request</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
