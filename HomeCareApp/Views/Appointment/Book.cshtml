@model HomeCareApp.ViewModels.AppointmentBookViewModel

<h2>Book appointment</h2>

<form asp-action="Book" asp-controller="Appointment" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Appointment.Subject">Subject</label>
        <input asp-for="Appointment.Subject" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Appointment.Description">Description</label>
        <textarea asp-for="Appointment.Description" class="form-control"></textarea>
    </div>

    <input type="hidden" asp-for="Appointment.Date" id="SelectedDate" />
    
     @if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">Please fill out all required fields.</div>
}

    <!-- Calendar partial view -->
    <partial name="_Calendar" model="Model.AvailableDays" />


    <button type="submit" class="btn btn-primary mt-3">Confirm appointment</button>
</form>