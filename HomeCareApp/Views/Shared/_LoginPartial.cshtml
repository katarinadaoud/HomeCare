@using Microsoft.AspNetCore.Identity
@using HomeCareApp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    // Finn ut hvor vi er (controller/action)
    var ctrl = (string?)ViewContext.RouteData.Values["Controller"];
    var act  = (string?)ViewContext.RouteData.Values["Action"];
    var isHome = string.Equals(ctrl, "Home", StringComparison.OrdinalIgnoreCase)
                 && string.Equals(act,  "Index", StringComparison.OrdinalIgnoreCase);
}

@if (SignInManager.IsSignedIn(User) && !isHome)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Manage/Index"
               title="Manage">
                Hello @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit"
                        class="nav-link btn btn-link text-dark border-0">
                    Logout
                </button>
            </form>
        </li>
    </ul>
}

